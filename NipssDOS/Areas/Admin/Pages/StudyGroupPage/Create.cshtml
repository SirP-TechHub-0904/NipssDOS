@page
@model NipssDOS.Areas.Admin.Pages.StudyGroupPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add Study Group</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudyGroup.Title" class="control-label"></label>
                <input asp-for="StudyGroup.Title" class="form-control" />
                <span asp-validation-for="StudyGroup.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudyGroup.Description" class="control-label"></label>
                <input asp-for="StudyGroup.Description" class="form-control" />
                <span asp-validation-for="StudyGroup.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudyGroup.AKA" class="control-label"></label>
                <input asp-for="StudyGroup.AKA" class="form-control" />
                <span asp-validation-for="StudyGroup.AKA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudyGroup.SortNumber" class="control-label"></label>
                <input asp-for="StudyGroup.SortNumber" class="form-control" />
                <span asp-validation-for="StudyGroup.SortNumber" class="text-danger"></span>
            </div> <div class="form-group">
                <label class="control-label">Image(650 by 650)</label>
                <div class="">
                    <input class="form-control" type="file" accept="image/*" capture="capture" name="filesPhoto" id="gallery-photo-add" />
                    <div class="gallery"></div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
