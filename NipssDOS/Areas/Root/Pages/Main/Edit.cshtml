@page
@model NipssDOS.Areas.Root.Pages.Main.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="card-body">
    <h2>Edit Alumni</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Alumni.Id" />
            <input type="hidden" asp-for="Alumni.GeneralTopic" />
            <input type="hidden" asp-for="Alumni.GeneralTopicContinuation" />
            <input type="hidden" asp-for="Alumni.Loading" />
            <input type="hidden" asp-for="Alumni.WebsiteFirstImage" />
            <input type="hidden" asp-for="Alumni.WebsiteSecondImage" />
            <div class="form-group">
                <label asp-for="Alumni.Title" class="control-label"></label>
                <input asp-for="Alumni.Title" class="form-control" />
                <span asp-validation-for="Alumni.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumni.DateRange" class="control-label"></label>
                <input asp-for="Alumni.DateRange" class="form-control" />
                <span asp-validation-for="Alumni.DateRange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumni.Year" class="control-label"></label>
                <input asp-for="Alumni.Year" class="form-control" />
                <span asp-validation-for="Alumni.Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Alumni.Active" /> @Html.DisplayNameFor(model => model.Alumni.Active)
                    </label>
                </div>
            </div>



            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Alumni.AddToLibrary" /> Add To Library
                    </label>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Alumni.Color" class="control-label">BG Color</label>
                <select asp-for="Alumni.Color" class="form-control">
                    <option value="bg-red"> bg-red</option>
                    <option value="bg-yellow">bg-yellow</option>
                    <option value="bg-aqua">bg-aqua</option>
                    <option value="bg-blue">bg-blue</option>
                    <option value="bg-light-blue">bg-light-blue</option>
                    <option value="bg-green">bg-green</option>
                    <option value="bg-navy">bg-navy</option>
                    <option value="bg-teal">bg-teal</option>
                    <option value="bg-olive">bg-olive</option>
                    <option value="bg-lime">bg-lime</option>
                    <option value="bg-orange">bg-orange</option>
                    <option value="bg-fuchsia">bg-fuchsia</option>
                    <option value="bg-purple">bg-purple</option>
                    <option value="bg-maroon">bg-maroon</option>

                    <option value="bg-red-active">bg-red-active</option>
                    <option value="bg-yellow-active">bg-yellow-active</option>
                    <option value="bg-aqua-active">bg-aqua-active</option>
                    <option value="bg-blue-active">bg-blue-active</option>
                </select>
                <span asp-validation-for="Alumni.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumni.SortOrder" class="control-label"></label>
                <input asp-for="Alumni.SortOrder" class="form-control" />
                <span asp-validation-for="Alumni.SortOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
